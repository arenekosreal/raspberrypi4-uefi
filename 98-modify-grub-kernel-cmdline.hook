[Trigger]
Type=File
Operation=Install
Operation=Upgrade
Operation=Remove
Target=/etc/default/grub
Target=boot/cmdline.txt
[Action]
Description=Modifying grub kernel cmdline ...
When=PostTransaction
Exec=sed -i "s/^GRUB_CMDLINE_LINUX=\"\"$/GRUB_CMDLINE_LINUX=`sed "s/root=.\+ rw //" /boot/cmdline.txt`" /etc/default/grub
