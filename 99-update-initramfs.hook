[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = boot/vmlinu*
Target = usr/lib/initcpio/*
[Action]
Description = Using dracut to generate initramfs ...
When = PostTransaction
Exec = /usr/bin/dracut -f /boot/initramfs-%KERNELVER%.img %KERNELVER%
Depends = dracut

